@model AutomotiveStore.Models.Product

@{ ViewBag.Title = "title";
                Layout = "_Layout"; }
<div class="container m-3">
    <h2>Edytuj Produkt</h2>
    <form asp-action="Edit" method="post">
        <br />
        <label >Id produktu</label>
        <input asp-for="ProductID" readonly /> <br />

        <label asp-for="Name">Nazwa</label>
        <input class="form-control" asp-for="Name" />

        <label asp-for="Description">Opis produktu</label>
        <input class="form-control" asp-for="Description" />

        <label asp-for="Category">Kategoria</label>
        <input class="form-control" asp-for="Category" />

        <label asp-for="Price">Cena</label>
        <input class="form-control" asp-for="Price" />


        <button class="btn btn-primary">Zapisz zmiany</button>
    </form>
</div>