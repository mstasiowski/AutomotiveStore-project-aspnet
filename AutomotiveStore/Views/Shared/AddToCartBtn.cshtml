@model Product

<div class=" card m-3 ">
    <div class="p-1 bg-light">
        <h4>
            <span class="card-title">@Model.Name</span>
            <span class="badge badge-success" style="float:right;">@Model.Price.ToString("c")</span>
        </h4>
    </div>
    <span class="card-text p-1 ">@Model.Description</span>

    <form id="@Model.ProductID" method="post">
        <input type="hidden" asp-for="ProductID" asp-page="/Cart" />
        <input type="hidden" name="returnUrl"
               value="" />
        <button type="submit" class="btn btn-primary bg-danger"
                style="float:right;" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                asp-route-productId="@Model.ProductID">
            Dodaj do koszyka
        </button>

    </form>

</div>
